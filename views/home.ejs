<%-include("partials/header")-%>

<h1>Home</h1>
<p style="font-size: 1.3em;"><%= hm %></p>
<%for(var i=0;i<pos.length;i++){%>
    <h1><%=pos[i].title%> </h1>
    <%var lis=pos[i].desc.split("<br>");%>
    <%if(lis[0].length>230){%>
    <p style="font-size: 1.3em;"><%=lis[0].slice(0,230)+"..."%>
         <a href="posts/<%=pos[i].title%>">Read More</a>
    </p>
    <%}else{%>
    <p style="font-size: 1.3em;"><%=lis[0]+"..."%>
        <a href="posts/<%=pos[i].title%>">Read More</a>
   </p>
    <%}}%>
